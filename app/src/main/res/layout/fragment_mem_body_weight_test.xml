<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huangyuwei.myapplication.mem.mem_body_weight_test">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/linear_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="BMI計算："
                android:textSize="30sp" />

            <EditText
                android:id="@+id/input_cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="身高(公分)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/input_kg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="體重(公斤)"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BMI計算"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="過輕：BMI&lt;18.5\n正常：18.5&lt;=BMI&lt;24\n過重：24&lt;=BMI&lt;27\n輕度肥胖：27&lt;=BMI&lt;30\n中度肥胖：30&lt;=BMI&lt;35\n重度肥胖：BMI&gt;=35"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>


</FrameLayout>
