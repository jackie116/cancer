<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huangyuwei.myapplication.link.link_economic">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/PublicTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/row_shape">

                <TableRow
                    android:id="@+id/rowpubliclabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_shape"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/northlabel"
                            android:layout_width="382dp"
                            android:layout_height="30dp"
                            android:layout_span="2"
                            android:background="@drawable/north_shape"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:scrollHorizontally="false"
                            android:text="公家機關"
                            android:textAlignment="center" />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/rowpublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_shape"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Namenorth"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_span="2"
                            android:background="@drawable/top_shape"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:scrollHorizontally="false"
                            android:text="項目"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/PhoneNumnorth"
                            android:layout_width="105dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/Namenorth"
                            android:background="@drawable/top_shape"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:text="申請資格"
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/Addressnorth"
                            android:layout_width="147dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/PhoneNumnorth"
                            android:background="@drawable/top_shape"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:text="服務單位"
                            android:textAlignment="center" />

                    </RelativeLayout>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/PrivateTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/row_shape">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="382dp"
                            android:layout_height="30dp"
                            android:layout_span="2"
                            android:background="#FFFFFF"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:scrollHorizontally="false"
                            android:text=""
                            android:textAlignment="center" />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/rowprivatelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_shape"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/centrallabel"
                            android:layout_width="382dp"
                            android:layout_height="30dp"
                            android:layout_span="2"
                            android:background="@drawable/central_shape"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:scrollHorizontally="false"
                            android:text="私人機關"
                            android:textAlignment="center" />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/rowprivate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_shape"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Namecentral"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_span="2"
                            android:background="@drawable/top_shape"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:scrollHorizontally="false"
                            android:text="項目"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/PhoneNumcentral"
                            android:layout_width="105dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/Namecentral"
                            android:background="@drawable/top_shape"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:text="電話"
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/Addresscentral"
                            android:layout_width="147dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/PhoneNumcentral"
                            android:background="@drawable/top_shape"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:text="地址"
                            android:textAlignment="center" />

                    </RelativeLayout>
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
