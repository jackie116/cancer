<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="我的"
        android:textColor="#0066FF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="76dp"
        android:text="年齡 : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Menstruation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="48dp"
        android:text="是否停經 : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Year" />

    <TextView
        android:id="@+id/Surgery_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:text="手術年月 : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Menstruation" />

    <TextView
        android:id="@+id/Cell_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="細胞類型 : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Surgery_date" />

    <TextView
        android:id="@+id/Hermone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="賀爾蒙受體 : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cell_type" />

    <TextView
        android:id="@+id/HER-2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="HER-2/neu基因表現 : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hermone" />

    <TextView
        android:id="@+id/FISH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="FISH : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HER-2" />

    <TextView
        android:id="@+id/Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"

        android:text="身高 : "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Menstruation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_cure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:text="我的療程 : "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FISH" />

    <Button
        android:id="@+id/btn_confirm_mem_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="444dp"
        android:text="儲存"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_year"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/Year"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_height"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/Height"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_menstruation"

        android:layout_marginTop="164dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/Menstruation"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_surgery"

        android:layout_marginTop="200dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/Surgery_date"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_celltype"

        android:layout_marginTop="240dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/Cell_type"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_hermone"

        android:layout_marginTop="268dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/Hermone"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_her2"

        android:layout_marginTop="312dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/HER-2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_fish"

        android:layout_marginTop="344dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/FISH"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_hermone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="368dp"
        android:text="化學治療"
        app:layout_constraintStart_toEndOf="@+id/my_cure"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="400dp"
        android:text="放射線治療"
        app:layout_constraintStart_toEndOf="@+id/my_cure"
        app:layout_constraintTop_toBottomOf="@+id/cb_hermone" />

    <CheckBox
        android:id="@+id/cb_biaoba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="標靶"
        app:layout_constraintStart_toEndOf="@+id/my_cure"
        app:layout_constraintTop_toBottomOf="@+id/cb_radio" />




</android.support.constraint.ConstraintLayout>
