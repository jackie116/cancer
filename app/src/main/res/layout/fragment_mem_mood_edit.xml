<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huangyuwei.myapplication.mem.mem_mood_edit">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Put form controls here-->


            <EditText
                android:id="@+id/EditTextDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="日期"
                android:inputType="date"></EditText>

            <TableLayout
                android:id="@+id/mood_daytable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/row_shape">

                <TableRow
                    android:id="@+id/mood_dayrow_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_shape"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/mood_day_label"
                            android:layout_width="382dp"
                            android:layout_height="30dp"
                            android:layout_span="2"
                            android:background="@drawable/north_shape"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:scrollHorizontally="false"
                            android:text=""
                            android:textAlignment="center" />

                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/mood_time_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_shape"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/mood_time_label"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_span="2"
                            android:background="@drawable/top_shape"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:scrollHorizontally="false"
                            android:text="時間"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/mood_mood_label"
                            android:layout_width="105dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/food_time_label"
                            android:background="@drawable/top_shape"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:text="心情溫度計"
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/mood_emoji_label"
                            android:layout_width="147dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/food_food_label"
                            android:background="@drawable/top_shape"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="5dp"
                            android:text="心情"
                            android:textAlignment="center" />

                    </RelativeLayout>
                </TableRow>


            </TableLayout>
            <Button
                android:id="@+id/addMoodDay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="sendFeedback"
                android:text="新增"></Button>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
